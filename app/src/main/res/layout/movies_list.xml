<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/layoutMovies"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/border"
    android:layout_margin="5dp">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/imageViewMovies"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/ic_android_black_24dp"
        />

    <TextView
        android:id="@+id/textViewMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Movie Name"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageViewMovies"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:id="@+id/textViewMoviesRating"
        android:layout_toRightOf="@+id/imageViewMovies"
        android:layout_below="@+id/textViewMovies"
        />
</RelativeLayout>